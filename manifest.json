{
  "manifest_version": 2,

  "name": "Pixiv Novel Downloader",
  "description": "Download Pixiv novel to simple txt file. This version only transfer to AozoraBunko format",
  "version": "0.1",

  "permissions": [
	 "https://www.pixiv.net/novel/show.php?id=*"
  ],
  
  "content_scripts": [
    {
	  "run_at": "document_end",
      "matches": ["https://www.pixiv.net/novel/show.php?id=*"],
      "js": ["main.js"]
    }
  ]
}